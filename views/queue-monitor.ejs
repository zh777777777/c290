<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=DM+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: {
              DEFAULT: '#2D8659',
              50: '#E8F5EF',
              100: '#D1EBE0',
              500: '#2D8659',
              600: '#256F4A',
              700: '#1D583B',
            },
            accent: {
              DEFAULT: '#F59E0B',
              100: '#FEF3C7',
              500: '#F59E0B',
            },
          },
          fontFamily: {
            sans: ['Inter', 'ui-sans-serif', 'system-ui'],
            display: ['DM Sans', 'ui-sans-serif', 'system-ui'],
          },
        }
      }
    }
  </script>
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
    h1, h2, h3, h4, h5, h6 {
      font-family: 'DM Sans', sans-serif;
    }
  </style>
</head>
<body class="bg-gray-50 text-gray-900 min-h-screen">
  <%- include('partials/nav', { activePage: activePage }) %>

  <!-- Header Section -->
  <div class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-4xl font-bold text-gray-900 mb-2" data-testid="text-page-title">Queue Monitor</h1>
          <p class="text-gray-600">Real-time queue status across all school canteens</p>
        </div>
        <button onclick="refreshQueues()" 
                class="px-6 py-3 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-all duration-200 flex items-center gap-2 self-start md:self-auto"
                data-testid="button-refresh">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
          Refresh
        </button>
      </div>
    </div>
  </div>

  <!-- Legend -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex flex-wrap items-center gap-6">
        <h3 class="text-sm font-semibold text-gray-900">Queue Status:</h3>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
          <span class="text-sm text-gray-700">Short (0-5 people)</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
          <span class="text-sm text-gray-700">Medium (6-12 people)</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-red-500"></div>
          <span class="text-sm text-gray-700">Long (13+ people)</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Canteen Cards Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% canteens.forEach(function(canteen) { 
        const queueColor = 'green';
      %>
        <div class="bg-white rounded-xl border border-gray-200 shadow-lg overflow-hidden hover:shadow-xl transition-all duration-200" 
             data-testid="card-canteen-<%= canteen.id %>">
          <!-- Canteen Header -->
          <div class="bg-gradient-to-br from-primary-500 to-primary-700 p-6 text-white">
            <h2 class="text-2xl font-bold mb-1"><%= canteen.name %></h2>
            <p class="text-primary-100 text-sm"><%= canteen.location %></p>
            <div class="mt-4 flex items-center justify-between">
              <span class="text-sm"><%= canteen.totalStalls %> Stalls</span>
              <button onclick="toggleStalls('<%= canteen.id %>')" 
                      class="px-4 py-2 bg-white/20 hover:bg-white/30 rounded-lg text-sm font-medium transition-colors backdrop-blur-sm"
                      data-testid="button-toggle-stalls-<%= canteen.id %>">
                View Stalls
              </button>
            </div>
          </div>

          <!-- Stalls List (Initially Hidden) -->
          <div id="stalls-<%= canteen.id %>" class="hidden divide-y divide-gray-100">
            <% canteen.stalls.forEach(function(stall) {
              const queueLevel = stall.currentQueue <= 5 ? 'short' : stall.currentQueue <= 12 ? 'medium' : 'long';
              const queueColor = queueLevel === 'short' ? 'green' : queueLevel === 'medium' ? 'yellow' : 'red';
            %>
              <div class="p-6 hover:bg-gray-50 transition-colors" data-testid="card-stall-<%= stall.id %>">
                <div class="flex items-start justify-between gap-4">
                  <div class="flex-1 min-w-0">
                    <h3 class="text-lg font-semibold text-gray-900 mb-1"><%= stall.name %></h3>
                    <p class="text-sm text-gray-600 mb-3"><%= stall.cuisineType %></p>
                    
                    <!-- Rating -->
                    <div class="flex items-center gap-2 mb-3">
                      <div class="flex items-center">
                        <% for(let i = 0; i < 5; i++) { %>
                          <svg class="w-4 h-4 <%= i < Math.floor(parseFloat(stall.rating)) ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                          </svg>
                        <% } %>
                      </div>
                      <span class="text-sm text-gray-600"><%= parseFloat(stall.rating).toFixed(1) %> (<%= stall.reviewCount %>)</span>
                    </div>
                  </div>

                  <!-- Queue Status -->
                  <div class="flex flex-col items-center justify-center bg-gray-50 rounded-lg p-4 min-w-[100px]">
                    <div class="relative">
                      <div class="w-3 h-3 rounded-full bg-<%= queueColor %>-500 absolute -top-2 -right-2"></div>
                      <span class="text-4xl font-bold text-gray-900" data-testid="text-queue-<%= stall.id %>"><%= stall.currentQueue %></span>
                    </div>
                    <span class="text-xs text-gray-600 mt-1">in queue</span>
                    <div class="mt-2 flex items-center gap-1 text-sm text-gray-600">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <span class="wait-time" data-stall-id="<%= stall.id %>" data-initial-wait="<%= stall.estimatedWaitTime %>"><%= stall.estimatedWaitTime %> min</span>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script>
    // Track page load time for real-time countdown
    const pageLoadTime = Date.now();

    function toggleStalls(canteenId) {
      const stallsDiv = document.getElementById('stalls-' + canteenId);
      stallsDiv.classList.toggle('hidden');
    }

    async function refreshQueues() {
      try {
        const response = await fetch('/api/simulate-queue-update', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });
        
        if (response.ok) {
          window.location.reload();
        }
      } catch (error) {
        console.error('Failed to refresh queues:', error);
      }
    }

    // Update wait times in real-time
    function updateWaitTimes() {
      const elapsedSeconds = Math.floor((Date.now() - pageLoadTime) / 1000);
      const elapsedMinutes = Math.floor(elapsedSeconds / 60);
      
      document.querySelectorAll('.wait-time').forEach(element => {
        const initialWait = parseInt(element.getAttribute('data-initial-wait'));
        const currentWait = Math.max(0, initialWait - elapsedMinutes);
        element.textContent = currentWait + ' min';
        
        // Change color based on remaining time
        if (currentWait === 0) {
          element.classList.add('text-green-600', 'font-semibold');
        }
      });
    }

    // Update wait times immediately on load and then every second
    updateWaitTimes();
    setInterval(updateWaitTimes, 1000);

    // Auto-refresh every 30 seconds
    setInterval(refreshQueues, 30000);
  </script>
</body>
</html>
